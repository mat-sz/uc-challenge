{
  "name": "uc-challenge",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Mat Sz",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "api",
    "web"
  ],
  "scripts": {
    "start:api": "cd api && npm run dev",
    "start:web": "cd web && npm run start",
    "start": "npm-run-all --parallel start:*"
  },
  "dependencies": {
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  }
}
